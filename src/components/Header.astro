<header class="sticky top-0 z-50 w-full header-glass">
	<nav class="flex items-center justify-around w-full px-0 py-3">
		<a href="/">
			<button class="nav-btn">Home</button>
		</a>
		<ul class="flex gap-8 text-base font-medium list-none m-0 p-0 mr-8">
			<li class="m-0 p-0">
				<a href="/about">
					<button class="nav-btn">About</button>
				</a>
			</li>
			<li class="m-0 p-0">
				<a href="/blog">
					<button class="nav-btn">Blog</button>
				</a>
			</li>
			<li class="m-0 p-0">
				<a href="/contact">
					<button class="nav-btn">Contact</button>
				</a>
			</li>
		</ul>
	</nav>
</header>

<style>
	.header-glass {
		position: sticky;
		top: 0;
		z-index: 50;
		width: 100vw;
		left: 0;
		right: 0;
		background: transparent;
		backdrop-filter: blur(16px) saturate(180%);
		-webkit-backdrop-filter: blur(16px) saturate(180%);
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		margin-top: -1px;
	}
	.nav-home {
		font-weight: bold;
		font-size: 1.25rem;
		letter-spacing: 0.05em;
		color: #222;
		background: transparent;
		padding-left: 2rem;
		transition: color 0.2s;
	}
	.nav-home:hover {
		color: #6366f1;
	}
	.nav-btn {
		padding: 0.75rem 2rem;
		border-radius: 0.5rem;
		background: rgba(0, 0, 0, 0);
		color: #f3f4f6;
		font-weight: 500;
		font-size: 1rem;
		border: none;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
		transition:
			background 0.2s,
			color 0.2s;
		cursor: pointer;
	}
	.nav-btn:hover,
	.nav-btn:focus {
		background: #6366f1;
		color: #fff;
	}
	.dark .header-glass {
		background: transparent;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}
	.dark .nav-home {
		color: #e5e7eb;
	}
	.dark .nav-home:hover {
		color: #a5b4fc;
	}
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		gap: 2rem;
	}
	li {
		margin: 0;
		padding: 0;
	}
</style>
